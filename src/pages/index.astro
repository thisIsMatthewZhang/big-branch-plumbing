---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import ReviewStar from '../components/ReviewStar.astro';
import Image from 'astro/components/Image.astro';
import ManFixingPipe from '../assets/man-fixing-pipe.jpg';
import PlumberTeamRed from '../assets/plumber-team-red.png';
import SinkDrain from '../assets/drain.png';
import BathTub from '../assets/bathtub-up-close.jpg';
import WallPipe from '../assets/wall-pipes.jpg';
import CircleIcon from '../components/CircleIcon.astro';
import BathtubIcon from '../assets/bathtub-icon.svg';
import DropletIcon from '../assets/water-droplet.svg';
import PipeIcon from '../assets/pipe-icon.svg';
import CheckMarkIcon from '../assets/check-mark-icon.svg';
import LatestBlog from '../components/LatestBlog.astro';
import Faucet from '../assets/faucet.png';
import CopperPipe from '../assets/copper-pipe.png';
import TruckCircles from '../assets/truck-circles.webp';


const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const mostRecentPosts = allPosts.sort((a: any, b: any) => {
        const dateOne: any = new Date(a.frontmatter.pubDate)
        const dateTwo: any = new Date(b.frontmatter.pubDate); 
        return dateTwo - dateOne;
}).slice(0, 2);
