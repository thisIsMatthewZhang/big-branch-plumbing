---
import '../styles/global.css';

const { serviceType, serviceUrl } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow flex flex-col h-full">
    <div class="flex items-center gap-3 mb-3">
        <span class="inline-block w-2 h-2 bg-red-800 rounded-full"></span>
        <span class="text-lg font-semibold font-[Libre_Franklin] text-zinc-900">{serviceType}</span>
    </div>
    <p class="text-sm text-zinc-600 font-[Golos_Text] leading-relaxed mb-4 flex-grow">
        Professional {serviceType.toLowerCase()} services for residential customers. 
        Licensed, insured, and guaranteed workmanship.
    </p>
    <a class="inline-flex items-center gap-2 text-red-800 font-semibold text-sm hover:underline mt-auto" href={'/services/' + serviceUrl}> 
        <span>View Details</span> 
        <svg width="16" height="16" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
