---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;

const metaTitle = `${frontmatter.title} | Big Branch Plumbing | Northshore`;
const metaDescription = frontmatter.description;
---

<Layout title={metaTitle} description={metaDescription}>
    <div id="page-container" class="w-full">
        
        <!-- Service Hero -->
        <div class="bg-[#f7f9fb] w-full py-12 md:py-16">
            <div class="max-w-4xl mx-auto px-4 text-center">
                <div class="flex items-center justify-center gap-2 mb-3">
                    <span class="inline-block w-2 h-2 bg-red-800 rounded-full"></span>
                    <span class="text-sm font-semibold font-[Golos_Text] text-red-800 uppercase tracking-wide">
                        Professional Plumbing Service
                    </span>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold font-[Inter] text-zinc-900 mb-4 leading-tight">
                    {frontmatter.title}
                </h1>
                <p class="text-lg text-zinc-700 font-[Golos_Text] leading-relaxed mb-6 max-w-2xl mx-auto">
                    {frontmatter.description}
                </p>
                <a href="/contact/" class="inline-block bg-red-800 text-white font-semibold font-[Golos_Text] px-6 py-3 rounded-lg hover:bg-red-900 transition-colors">
                    Request This Service
                </a>
            </div>
        </div>

        <!-- Service Details -->
        <div class="bg-white w-full py-12 md:py-16">
            <div class="max-w-4xl mx-auto px-4">
                <div class="prose prose-lg max-w-none font-[Golos_Text] text-zinc-800 leading-relaxed">
                    <slot />
                </div>

                <!-- Service Area -->
                <div class="mt-12 bg-[#f7f9fb] rounded-xl p-6">
                    <h3 class="text-xl font-semibold font-[Inter] text-zinc-900 mb-3">Service Area</h3>
                    <p class="text-zinc-700 font-[Golos_Text] leading-relaxed">
                        We proudly provide {frontmatter.title.toLowerCase()} services to all Northshore communities including 
                        Hammond, Ponchatoula, Mandeville, Covington, Madisonville, Slidell, Abita Springs, Lacombe, Pearl River, 
                        Folsom, Loranger, Amite City, Tickfaw, and Independence.
                    </p>
                </div>

                <!-- Why Choose Us -->
                <div class="mt-8 bg-[#f7f9fb] rounded-xl p-6">
                    <h3 class="text-xl font-semibold font-[Inter] text-zinc-900 mb-3">Why Choose Big Branch Plumbing</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="bg-white p-4 rounded-lg">
                            <div class="text-red-800 font-bold text-lg mb-1">38+</div>
                            <div class="text-sm font-[Golos_Text] text-zinc-700">Years Experience</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg">
                            <div class="text-red-800 font-bold text-lg mb-1">100%</div>
                            <div class="text-sm font-[Golos_Text] text-zinc-700">Licensed & Insured</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg">
                            <div class="text-red-800 font-bold text-lg mb-1">Guaranteed</div>
                            <div class="text-sm font-[Golos_Text] text-zinc-700">Workmanship</div>
                        </div>
                    </div>
                </div>

                <!-- Service CTA -->
                <div class="mt-12 bg-red-800 text-white rounded-xl p-8 text-center">
                    <h3 class="text-2xl font-semibold font-[Inter] mb-3">
                        Ready to Get Started?
                    </h3>
                    <p class="text-red-100 font-[Golos_Text] mb-6">
                        Contact Big Branch Plumbing today for professional {frontmatter.title.toLowerCase()} services.
                    </p>
                    <a href="/contact/" class="inline-block bg-white text-red-800 font-semibold font-[Golos_Text] px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors text-lg">
                        Contact Us Today
                    </a>
                </div>
            </div>
        </div>

    </div>
</Layout>

<style>
    /* Enhanced prose styling for service pages */
    .prose h2 {
        font-size: 1.875rem;
        font-weight: 800;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        color: #8c1111;
        font-family: 'Inter', sans-serif;
        letter-spacing: -0.025em;
    }
    .prose h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
        color: #1f2937;
        font-family: 'Inter', sans-serif;
    }
    .prose p {
        margin-bottom: 1.5rem;
        font-size: 1.0625rem;
        line-height: 1.75;
        color: #374151;
    }
    .prose ul, .prose ol {
        margin-bottom: 1.5rem;
        padding-left: 1.75rem;
    }
    .prose li {
        margin-bottom: 0.625rem;
        line-height: 1.7;
        color: #4b5563;
    }
    .prose li::marker {
        color: #8c1111;
        font-weight: 600;
    }
    .prose strong {
        font-weight: 700;
        color: #1f2937;
    }
    .prose a {
        color: #8c1111;
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 2px;
        font-weight: 600;
    }
    .prose a:hover {
        color: #650f0f;
        text-decoration-thickness: 3px;
    }
    .prose blockquote {
        border-left: 4px solid #8c1111;
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        background: #f7f9fb;
        padding: 1.25rem 1.5rem;
        border-radius: 0 0.5rem 0.5rem 0;
        color: #374151;
    }
    .prose blockquote strong {
        color: #8c1111;
    }
    
    /* Enhanced section styling */
    .prose h2 {
        position: relative;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e5e7eb;
    }
    .prose h2:first-child {
        margin-top: 0;
    }
    
    /* Mobile responsive */
    @media (max-width: 768px) {
        .prose h2 {
            font-size: 1.625rem;
            margin-top: 2rem;
        }
        .prose h3 {
            font-size: 1.375rem;
            margin-top: 1.75rem;
        }
        .prose p, .prose li {
            font-size: 1rem;
        }
        .prose ul, .prose ol {
            padding-left: 1.5rem;
        }
    }
</style>