---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;

const metaTitle = `${frontmatter.title} | Big Branch Plumbing Blog`;
const metaDescription = frontmatter.description || "Professional plumbing advice and tips from Big Branch Plumbing.";
---

<Layout title={metaTitle} description={metaDescription}>
    <div class="w-full bg-white">
        <div class="max-w-4xl mx-auto px-4 py-12 md:py-16">
            
            <!-- Blog Header -->
            <div class="mb-8 md:mb-12">
                <h1 class="text-3xl md:text-5xl font-bold font-[Inter] text-zinc-900 mb-4 leading-tight">
                    {frontmatter.title}
                </h1>
                <div class="flex flex-wrap items-center gap-4 text-sm text-zinc-600 font-[Golos_Text]">
                    <span class="flex items-center gap-1">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" fill="#8c1111"/>
                        </svg>
                        {frontmatter.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </span>
                    <span>|</span>
                    <span class="flex items-center gap-1">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#8c1111"/>
                        </svg>
                        {frontmatter.author}
                    </span>
                </div>
            </div>

            <!-- Blog Content -->
            <article class="prose prose-lg max-w-none font-[Golos_Text] text-zinc-800">
                <slot />
            </article>

            <!-- Back to Blog -->
            <div class="mt-12 pt-8 border-t border-gray-200 text-center">
                <a href="/blogs/" class="inline-flex items-center gap-2 text-red-800 font-semibold hover:underline">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" fill="#8c1111"/>
                    </svg>
                    Back to All Blog Posts
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* Custom prose styling for better mobile readability */
    article.prose {
        line-height: 1.8;
    }
    article.prose h2 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #1f2937;
    }
    article.prose h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: #374151;
    }
    article.prose p {
        margin-bottom: 1.25rem;
        font-size: 1.05rem;
    }
    article.prose ul, article.prose ol {
        margin-bottom: 1.25rem;
        padding-left: 1.5rem;
    }
    article.prose li {
        margin-bottom: 0.5rem;
    }
    article.prose strong {
        font-weight: 600;
        color: #1f2937;
    }
    article.prose a {
        color: #8c1111;
        text-decoration: underline;
    }
    article.prose a:hover {
        color: #650f0f;
    }
    
    @media (max-width: 768px) {
        article.prose h2 {
            font-size: 1.5rem;
        }
        article.prose h3 {
            font-size: 1.25rem;
        }
        article.prose p, article.prose li {
            font-size: 1rem;
        }
    }
</style>